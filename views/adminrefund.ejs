<%- include('partials/head') %>
<%- include('partials/adminnavbar') %>

<style>
    h1 {
        color: #343a40; /* Dark text color */
        font-size: 2.5rem; /* Larger font size */
        margin-bottom: 20px; /* Space below the header */
    }

    .table {
        border-radius: 8px; /* Rounded corners for table */
        overflow: hidden; /* Ensures rounded corners are visible */
    }

    .table th {
        background-color: #007bff; /* Blue header */
        color: white; /* White text for header */
    }

    .table th, .table td {
        text-align: center; /* Center-aligning text */
    }

    .form-group label {
        font-weight: bold; /* Bold label text */
    }

    #productName {
        background-color: #e9ecef; /* Light gray background for read-only input */
    }

    .btn-success {
        background-color: #28a745; /* Custom green color */
        border-color: #28a745; /* Border color for the button */
    }

    .btn-success:hover {
        background-color: #218838; /* Darker green on hover */
        border-color: #1e7e34; /* Darker border on hover */
    }

    .alert {
        margin-top: 20px; /* Space above alert */
    }

    .text-left {
        text-align: left; /* Align text to the left */
        margin-bottom: 20px; /* Space below the header */
        color: #343a40; /* Optional: Match color to your design */
    }

    

    .accept-btn {
        background-color: #686868; /* Custom green color */
        border: none; /* No border */
        color: white; /* White text */
        padding: 10px 15px; /* Padding for button */
        border-radius: 5px; /* Rounded corners for button */
        cursor: pointer; /* Pointer cursor on hover */
        transition: background-color 0.3s; /* Smooth transition */
    }

    .accept-btn:hover {
        background-color: #ff2323; /* Darker green on hover */
    }

    .alert {
        margin-top: 20px; /* Space above alert */
    }

    /* Fixed header styles */
    thead th {
        position: sticky; /* Make header sticky */
        top: 0; /* Position it at the top */
        background-color: #007bff; /* Match header color */
        z-index: 1; /* Ensure it appears above other content */
    }
</style>

<div class="container mt-4">
    <h2 class="text-left">Delivery Complete</h2>
    <% if (messages.success) { %>
        <div class="alert alert-success">
            <%= messages.success %>
        </div>
    <% } %>

    <!-- Error Message -->
    <% if (messages.error) { %>
        <div class="alert alert-danger">
            <%= messages.error %>
        </div>
    <% } %>

    <div class="table-responsive">
        <% if (orders.length > 0) { %>
            <table class="table table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>Order ID</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Contact Number</th>
                        <th>Location</th>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Total Price</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(order => { %>
                        <tr>
                            <td><%= order.OrderID %></td>
                            <td><%= order.FullName %></td>
                            <td><%= order.Email %></td>
                            <td><%= order.ContactNumber %></td>
                            <td><%= order.Location %></td>
                            <td><%= order.ProductName %></td>
                            <td><%= order.Quantity %></td>
                            <td>$<%= Number(order.Price).toFixed(2) %></td>
                            <td>$<%= Number((order.Quantity) * (order.Price)).toFixed(2)  %></td>
                            <td><%= order.Status %></td>
                            
                            
                            
                            
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p>No pending orders found.</p>
        <% } %>
    </div>
</div>

<%- include('partials/script') %>

